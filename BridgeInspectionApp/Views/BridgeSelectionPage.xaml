<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BridgeInspectionApp.Views.BridgeSelectionPage"
             Title="选择桥梁">
    <VerticalStackLayout Spacing="20" Padding="30">
        <CollectionView x:Name="bridgeList" SelectionMode="Single" SelectionChanged="BridgeList_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="添加新桥梁" Clicked="AddNewBridge_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
